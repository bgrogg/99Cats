<form action= "<%cat_url(cat)%>" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]">

  <br>

  <label for="birth_date">Birth Date</label>
  <input id="birth_date" type="date" name="cat[birth_date]">

  <br>

  <label for="sex">Sex</label>
  M<input id="sex" type="radio" name="cat[sex]" value="M" checked>
  F<input id="sex" type="radio" name="cat[sex]" value="F">

  <br>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled selected>Please select a color--</option>
    <option value="blue">Blue</option>
    <option value="brown">Brown</option>
    <option value="pink">Pink</option>
  </select>
  <br>
  <br>

  <label for="description">Description</label>
  <textarea id="description" name="cat[description]"></textarea>

  <br>

  <input type="submit" value="Submit">

</form>
